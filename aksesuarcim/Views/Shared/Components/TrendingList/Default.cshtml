@model List<aksesuarcim.Models.Products>

    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center mb-3 pb-3">
                <div class="col-md-12 heading-section text-center ftco-animate">
                    <span class="subheading">Trend Ürünler</span>
                    <h2 class="mb-4">Ürünlerimiz</h2>
                    <p>Özel Günlerinize Şıklık Katın</p>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                @foreach(var item in Model)
                {
                <div class="col-md-6 col-lg-3 ftco-animate">
                    <div class="product">
                        <a href="#" class="img-prod">
                            <img class="img-fluid" src="urunler/@item.image" alt="Colorlib Template">
                            <span class="">Stokta</span>
                            <div class="overlay"></div>
                        </a>
                        <div class="text py-3 pb-4 px-3 text-center">
                        <h3><a href="#">@item.product_Name</a></h3>
                            <div class="d-flex">
                                <div class="pricing">
                                <p class="price"><span class="mr-2 price-dc">@item.product_price</span><span class="price-sale">@item.discount</span></p>
                                </div>
                            </div>
                            <div class="bottom-area d-flex px-3">
                                <div class="m-auto d-flex">
                                    <a href="/Anasayfa/UrunDetay/@item.product_Id" class="add-to-cart d-flex justify-content-center align-items-center text-center">
                                        <span><i class="ion-ios-menu"></i></span>
                                    </a>
                                    <a href="/Cart/Add/@item.product_Id" class="buy-now d-flex justify-content-center align-items-center mx-1">
                                        <span><i class="ion-ios-cart"></i></span>
                              </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                }
                </div>
                </div>
    </section>

